<AnchorPane prefHeight="1000.0" prefWidth="1400.0" style="-fx-background-color: #606060;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.MainScreenController">
   <children>
      <HBox layoutY="-8.0" prefHeight="204.0" prefWidth="1400.0" style="-fx-background-color: #454545;">
         <children>
            <ImageView fx:id="logoView" fitHeight="164.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../img/logo.png" />
               </image>
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </ImageView>
            <Label fx:id="brandLbl" alignment="CENTER" prefHeight="164.0" prefWidth="256.0" text="The Eater's Club" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="Elephant" size="24.0" />
               </font>
            </Label>
            <VBox alignment="BOTTOM_CENTER" prefHeight="164.0" prefWidth="554.0">
               <children>
                  <ComboBox fx:id="filterBox" prefHeight="31.0" prefWidth="320.0" />
               </children>
            </VBox>
            <VBox prefHeight="164.0" prefWidth="329.0">
               <children>
                  <HBox fx:id="cartButton" prefHeight="103.0" prefWidth="334.0" style="-fx-background-color: #353535;">
                     <children>
                        <ImageView fitHeight="64.0" fitWidth="69.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../img/cartLogo.png" />
                           </image>
                           <HBox.margin>
                              <Insets left="20.0" top="20.0" />
                           </HBox.margin>
                        </ImageView>
                        <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="View Your Cart">
                           <font>
                              <Font name="Elephant" size="24.0" />
                           </font>
                           <HBox.margin>
                              <Insets left="30.0" top="40.0" />
                           </HBox.margin>
                        </Text>
                     </children>
                     <VBox.margin>
                        <Insets bottom="15.0" top="15.0" />
                     </VBox.margin>
                  </HBox>
                  <Button fx:id="finalizeOrderBtn" mnemonicParsing="false" onAction="#finalizeOrderClick" prefHeight="31.0" prefWidth="331.0" style="-fx-background-color: #353535;" text="Ολοκλήρωση Παραγγελίας" textAlignment="CENTER" textFill="WHITE">
                     <font>
                        <Font name="Verdana" size="18.0" />
                     </font>
                  </Button>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="20.0" top="20.0" />
         </padding>
      </HBox>
      <ListView fx:id="listView" layoutY="196.0" prefHeight="750.0" prefWidth="1400.0" style="-fx-background-color: #505050;" />
      <Spinner fx:id="quantitySpinner" layoutX="1143.0" layoutY="957.0" prefHeight="31.0" prefWidth="79.0" />
      <Label fx:id="selectedPlateLbl" layoutX="35.0" layoutY="962.0" text="Plate: " textFill="WHITE" />
      <Label fx:id="selectedPriceLbl" layoutX="848.0" layoutY="962.0" text="Plate Price:" textFill="WHITE" />
      <Button fx:id="addToCartBtn" layoutX="1250.0" layoutY="957.0" mnemonicParsing="false" prefHeight="31.0" prefWidth="123.0" text="Add To Cart" />
      <Label fx:id="finalPriceLbl" layoutX="973.0" layoutY="962.0" text="Final Plate Price:" textFill="WHITE" />
   </children>
</AnchorPane>
